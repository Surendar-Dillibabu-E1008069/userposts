<%= form_for @user do |f| %>
  <% if user.errors.any? %>
    <div>
      <div style="color: red">
        <h2>
          Please fix the below list of errors to proceed further
        </h2>
      </div>
      <ul>
        <% user.errors.each do | attr, msg | %>
          <% if user.errors[attr].first == msg %>
            <li> <%= "#{msg}" %> </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  <% end %>
  <% if notice != nil %>
    <div style="color: green">
      <%= notice %>
    </div>
  <% end %>
  <div class="pd-tp-10">
    <table class="edt-pst-tb">
      <tr>
        <td><%= f.label :first_name %></td>
        <td><%= f.text_field :first_name %></td>
      </tr>
      <tr>
        <td><%= f.label :last_name %></td>
        <td><%= f.text_field :last_name %></td>
      </tr>
      <tr>
        <td><%= f.label :email %></td>
        <td><%= f.text_field :email %></td>
      </tr>
      <tr>
        <td><%= f.label :password %></td>
        <td><%= f.password_field :password, value: user.password %></td>
      </tr>
      <tr>
        <td><%= f.label :password_confirmation %></td>
        <td><%= f.password_field :password_confirmation, value: user.password_confirmation %></td>
      </tr>
      <tr>
        <td>
          <% if session[:user_id] != nil %>
            <div class="pd-tp-10">
              <%= link_to "Back", user_path(user) %>
            </div>
          <% end %>
        </td>
        <td>
          <div class="pd-tp-10" style="margin-left: 50%">
            <%= f.hidden_field :id %>
            <%= f.submit %>
          </div>
        </td>
      </tr>
    </table>
  </div>
<% end %>