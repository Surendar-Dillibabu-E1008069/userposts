<div>
  <h1>Login page</h1>
  <% if notice != nil %>
    <div style="color: green">
      <%= notice %>
    </div>
  <% end %>
  <%= form_tag do%>
    <div class="pd-tp-10">
      <table style="width: 30%">
        <tr>
          <td><%= label_tag :email %></td>
          <td><%= text_field_tag :email %></td>
        </tr>
        <tr>
          <td><%= label_tag :password %></td>
          <td><%= password_field_tag :password %></td>
        </tr>
        <tr>
          <td>
          </td>
          <td>
            <div class="pd-tp-10" style="margin-left: 30%;">
              <%= submit_tag "Log In" %>
            </div>
          </td>
        </tr>
      </table>
    </div>
  <% end %>
</div>